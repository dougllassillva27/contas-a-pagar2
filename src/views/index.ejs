            </div>
            <div class="card-value" id="valor-rendas-display">
                R$ <%= totais.totalrendas.toLocaleString('pt-BR', { minimumFractionDigits: 2 }) %>
            </div>
            <button onclick="toggleRendasVisibility()" class="btn-toggle-visibility" title="Ocultar/Mostrar valor">
                <span class="material-icons" id="icon-toggle-rendas">visibility</span>
            </button>
            <button onclick="abrirModalRendas()" class="btn-card-details" title="Ver detalhes">
                <span class="material-icons">info</span>
            </button>
        </div>

        <div class="card summary-card contas-card draggable-card" data-card="contas" draggable="true">
            <div class="card-header">
                <span class="card-icon">üìã</span>
                <h3>Total de Contas</h3>
            </div>
            <div class="card-value negative">
                R$ <%= totais.totalcontas.toLocaleString('pt-BR', { minimumFractionDigits: 2 }) %>
            </div>
        </div>

        <div class="card summary-card falta-card draggable-card" data-card="falta" draggable="true">
            <div class="card-header">
                <span class="card-icon">‚ö†Ô∏è</span>
                <h3>Falta Pagar</h3>
            </div>
            <div class="card-value negative">
                R$ <%= totais.faltapagar.toLocaleString('pt-BR', { minimumFractionDigits: 2 }) %>
            </div>
        </div>

        <div class="card summary-card saldo-card draggable-card" data-card="saldo" draggable="true">
            <div class="card-header">
                <span class="card-icon">üí≥</span>
                <h3>Saldo Previsto</h3>
            </div>
            <div class="card-value <%= totais.saldoprevisto >= 0 ? 'positive' : 'negative' %>">
                R$ <%= totais.saldoprevisto.toLocaleString('pt-BR', { minimumFractionDigits: 2 }) %>
            </div>
        </div>
    </div>

    <!-- ===== ANOTA√á√ïES ===== -->
    <section class="card notes-section">
        <h2>üìù Anota√ß√µes</h2>
        <textarea id="anotacoes" placeholder="Escreva suas anota√ß√µes aqui..." rows="4"><%= anotacoes %></textarea>
        <div id="notes-status" class="notes-status"></div>
    </section>

    <!-- ===== CONTAS FIXAS ===== -->
    <section class="card">
        <div class="section-header">
            <h2>üìÖ Contas Fixas</h2>
            <span class="section-total negative">
                R$ <%= fixas.filter(i => i.status === 'PENDENTE').reduce((acc, i) => acc + Number(i.valor), 0).toLocaleString('pt-BR', { minimumFractionDigits: 2 }) %>
            </span>
            <button onclick="abrirModalConta('FIXA')" class="btn-add">
                <span class="material-icons">add_circle</span> Adicionar
            </button>
        </div>
        
        <div class="items-list" id="fixas-list">
            <% if (fixas.length === 0) { %>
                <p class="empty-message">Nenhuma conta fixa cadastrada</p>
            <% } else { %>
                <% fixas.forEach(item => { %>
                    <div class="item <%= item.status === 'PAGO' ? 'paid' : '' %> draggable-row" draggable="true" data-id="<%= item.id %>">
                        <span class="drag-handle material-icons">drag_indicator</span>
                        <div class="item-info">
                            <span class="item-description"><%= item.descricao %></span>
                        </div>
                        <div class="item-value negative">
                            R$ <%= Number(item.valor).toLocaleString('pt-BR', { minimumFractionDigits: 2 }) %>
                        </div>
                        <div class="item-actions">
                            <% if (item.status !== 'PAGO') { %>
                                <button onclick="marcarPago(<%= item.id %>)" class="btn-action success" title="Marcar como pago">
                                    <span class="material-icons">check_circle</span>
                                </button>
                            <% } else { %>
                                <button onclick="marcarPendente(<%= item.id %>)" class="btn-action warning" title="Marcar como pendente">
                                    <span class="material-icons">undo</span>
                                </button>
                            <% } %>
                            <button onclick="editarItem(<%= item.id %>)" class="btn-action info" title="Editar">
                                <span class="material-icons">edit</span>
                            </button>
                            <button onclick="excluirItem(<%= item.id %>)" class="btn-action danger" title="Excluir">
                                <span class="material-icons">delete</span>
                            </button>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </section>

    <!-- ===== SUAS CONTAS CART√ÉO ===== -->
    <section class="card">
        <div class="section-header">
            <h2>üí≥ Suas Contas Cart√£o</h2>
            <span class="section-total negative">
                R$ <%= cartao.filter(i => i.status === 'PENDENTE').reduce((acc, i) => acc + Number(i.valor), 0).toLocaleString('pt-BR', { minimumFractionDigits: 2 }) %>
            </span>
            <button onclick="abrirModalConta('CARTAO')" class="btn-add">
