class TouchLongPressHandler {
    constructor(element, callback, duration = 500) {
        this.element = element;
        this.callback = callback;
        this.duration = duration;
        this.timer = null;
        this.startPos = { x: 0, y: 0 };
        this.isTouch = 'ontouchstart' in window || navigator.maxTouchPoints > 0;
        
        this.init();
    }

    init() {
        // Desktop: contextmenu (bot√£o direito)
        this.element.addEventListener('contextmenu', (e) => {
            e.preventDefault();
            this.callback({
                clientX: e.clientX,
                clientY: e.clientY,
                isMobile: false
            });
        });

        // Touch devices: long press
        if (this.isTouch) {
            this.element.addEventListener('touchstart', this.handleTouchStart.bind(this), { passive: false });
            this.element.addEventListener('touchend', this.handleTouchEnd.bind(this), { passive: false });
            this.element.addEventListener('touchmove', this.handleTouchMove.bind(this), { passive: false });
            this.element.addEventListener('touchcancel', this.handleTouchCancel.bind(this));
        }
    }

    handleTouchStart(e) {
        e.preventDefault();
        
        const touch = e.touches[0];
        this.startPos = { x: touch.clientX, y: touch.clientY };
        
        this.element.classList.add('long-press-active');
        
        this.timer = setTimeout(() => {
            if (navigator.vibrate) {
                navigator.vibrate([50, 30, 50]);
            }
            
            this.callback({
                clientX: touch.clientX,
                clientY: touch.clientY,
                isMobile: true
            });
            
            this.cleanup();
        }, this.duration);
    }

    handleTouchMove(e) {
        const touch = e.touches[0];
        const moveX = Math.abs(touch.clientX - this.startPos.x);
        const moveY = Math.abs(touch.clientY - this.startPos.y);
        
        if (moveX > 10 || moveY > 10) {
            this.cleanup();
        }
    }

    handleTouchEnd(e) {
        e.preventDefault();
        this.cleanup();
    }

    handleTouchCancel() {
        this.cleanup();
    }

    cleanup() {
        if (this.timer) {
            clearTimeout(this.timer);
            this.timer = null;
        }
        this.element.classList.remove('long-press-active');
    }
}

