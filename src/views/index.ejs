function inicializarDragDropCards() {
    const container = document.getElementById('summary-cards-container');
    if (!container) return;

    const cards = container.querySelectorAll('.draggable-card');
    let draggedCard = null;

    cards.forEach(card => {
        card.addEventListener('dragstart', () => {
            draggedCard = card;
            card.classList.add('dragging');
        });

        card.addEventListener('dragend', () => {
            card.classList.remove('dragging');
            salvarOrdemCards();
        });

        card.addEventListener('dragover', (e) => {
            e.preventDefault();
        });

        card.addEventListener('drop', (e) => {
            e.preventDefault();
            if (draggedCard && draggedCard !== card) {
                const ordem = Array.from(container.children);
                const draggedIndex = ordem.indexOf(draggedCard);
                const targetIndex = ordem.indexOf(card);

                if (draggedIndex < targetIndex) {
                    card.after(draggedCard);
                } else {
                    card.before(draggedCard);
                }
            }
        });
    });
}

async function salvarOrdemCards() {
